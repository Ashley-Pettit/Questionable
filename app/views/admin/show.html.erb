<h2><%= @event.title %></h2>
<p><%= @event.speaker %></p>
<p><%= @event.description %></p>

<%= form_tag "/event/edit/#{@event.id}", method: 'get' do %>
  <button class="button" style="display:inline-block">Edit Event</button><br>
<% end %>

<%= form_tag "/event/edit/#{@event.id}", method: 'delete' do %>
  <button class="button" style="display:inline-block">Delete Event</button><br>
<% end %>
