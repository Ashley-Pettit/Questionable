<%# EVENT QUESTIONS PAGE %>

<h2 style="margin-top:1.5rem"><%= "#{@event.title} - #{@event.speaker} - 10:30" %> </h2>
<div style="margin-top:1.5rem"><%= @event.description %></div>

<button class="btn-sml" id="sort_by_recent">Randomize</button>
<button class="btn-sml" id="sort_by_trending">Recently Asked</button>
<button class="btn-sml" id="sort_by_trending">Trending</button>
<button class="btn-sml" id="sort_by_most_liked">Most Liked</button><BR />


<% if @questions %>
  <% @questions.each do |question| %>
      <% if 14 == @event.id %>
        <p><%= question.description %> - Asked by
        <%= @users.find_by(id: question.user_id).name %> </p>
      <% end %>
  <% end %>
<% else %>
  <h3>No-one has asked a question yet! Be the first to ask one below!</h3>
<% end %>

<button id="myBtn" class="button">Ask a question</button>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">x</span>
    <h1>Ask a Question</h1><BR />

    <%= form_tag "/event/#{@event.id}", method: 'post' do %>
      <label>Question:</label>
      <textarea rows="4" cols="50" class="std_input_xl" name='question_body' placeholder="Question in detail" required></textarea><BR />
      <button class="button" id="submit_question">Submit</button>
    <% end %>

    <ol>
      <li><h6>Please check if a similar question has already been asked.</h6></li>
      <li><h6>Asking a question will use one of your three votes </h6></li>
    </ol>
  </div>

</div>
